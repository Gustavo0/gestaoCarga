swagger: "2.0"
info:
  description: "Gestão e Controle de cargas no centro de distribuição."
  version: "1.0.0"
  title: "Swagger Centro Logistico"
  contact:
    email: "gustavo.sgomess@gmail.com"
host: "localhost:8080"
basePath: "/v1"
schemes:
- "https"
- "http"
paths:
  /delivery:
    post:
      tags:
      - "Delivery"
      summary: "Cadastro de um conjunto de cargas para um veículo."
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        required: true
        schema:
          $ref: "#/definitions/DeliveryDto"
      responses:
        201:
          description: "Entrega criada com sucesso"
        400:
          description: "Erro na criação da entrega"
  /delivery/{deliveryId}/step:
    post:
      tags:
      - "Delivery Steps"
      summary: "Consulta de instruções de abastecimento do veículo."
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - name: "deliveryId"
        in: "path"
        description: "ID da delivery"
        required: true
        type: "integer"
        format: "int64"
      responses:
        200:
          description: "Sucesso!!"
          schema:
            $ref: "#/definitions/SaidaStepsDeliveryDto"
        400:
          description: "Id invalido"
definitions:
  SaidaStepsDeliveryDto:
    type: "object"
    properties:
      steps:
        type: "array"
        items:
          $ref: "#/definitions/Step"
  Step:
    type: "object"
    properties:
      step: 
        type: "integer"
        format: "int64"
      packageId:
        type: "integer"
        format: "int64"
      from:
        type: "string"
      to:
        type: "string"
  DeliveryDto:
    type: "object"
    properties:
      vehicle:
        type: "integer"
        format: "int64"
      deliveryId:
        type: "integer"
        format: "int64"
      packages:
        type: "array"
        items:
          $ref: "#/definitions/Packages"
        minItems: 1
        maxItems: 3
  Packages:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int64"
      weight:
        type: "number"
        format: "double"