swagger: "2.0"
info:
  description: "Gestão e Controle de cargas no centro de distribuição."
  version: "1.0.0"
  title: "Swagger Centro Logistico"
  contact:
    email: "gustavo.sgomess@gmail.com"
host: "localhost:8080"
basePath: "/v1"
schemes:
- "https"
- "http"
paths:
  /delivery:
    post:
      tags:
      - "Delivery"
      summary: "Cadastro de um conjunto de cargas para um veículo."
      operationId: "addPet"
      consumes:
      - "application/json"
      produces:
      - "application/xml"
      parameters:
      - in: "body"
        name: "body"
        required: true
        schema:
          $ref: "#/definitions/DeliveryDto"
      responses:
        201:
          description: "Entrega criada com sucesso"
        400:
          description: "Erro na criação da entrega"
definitions:
  DeliveryDto:
    type: "object"
    properties:
      vehicle:
        type: "integer"
        format: "int64"
      deliveryId:
        type: "integer"
        format: "int64"
      packages:
        type: "array"
        items:
          $ref: "#/definitions/Packages"
  Packages:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int64"
      weight:
        type: "number"
        format: "double"